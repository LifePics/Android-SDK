<resources>

    <style name="lp_app_theme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/lp_action_bar</item>
    </style>

    <style name="lp_order_theme" parent="@style/Theme.AppCompat.Light">
        <item name="@android:divider">@color/lp_grey</item>
    </style>

    <style name="lp_action_bar_theme">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="lp_action_bar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:showDividers">middle</item>
        <item name="background">@color/lp_primary_tint_color</item>
        <item name="android:background">@color/lp_white_color</item>
        <item name="android:backgroundStacked">@color/lp_white_color</item>
        <item name="android:backgroundSplit">@drawable/lp_tab_bar_background</item>
        <item name="android:actionBarTabStyle">@style/lp_action_bar_tab_style</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="lp_action_bar_tab_style" >
        <item name="android:background">@drawable/lp_tab_bar_background</item>
    </style>

    <!-- common -->
    <style name="lp_standard_background">
        <item name="android:background">#ffffff</item>
    </style>

    <style name="lp_small_text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="lp_normal_text">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="lp_green_bar_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingLeft">@dimen/lp_activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/lp_primary_tint_color</item>
    </style>

    <!-- views -->
    <style name="lp_single_fragment" parent="lp_standard_background">
    </style>

    <style name="lp_single_inset_fragment" parent="lp_single_fragment">
        <item name="android:paddingLeft">@dimen/lp_activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/lp_activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/lp_activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/lp_activity_vertical_margin</item>
    </style>

    <!-- intro -->
    <style name="lp_intro_version" parent="lp_small_text">
        <item name="android:textColor">#616161</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lp_intro_order_button">
        <item name="android:background">@drawable/lp_order_prints_button</item>
        <item name="android:textColor">@color/lp_light_button_title_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="lp_intro_primary_color_text" parent="lp_normal_text">
        <item name="android:textColor">@color/lp_primary_tint_color</item>
    </style>

    <style name="lp_intro_secondary_color_text" parent="lp_normal_text">
        <item name="android:textColor">@color/lp_secondary_tint_color</item>
    </style>

    <style name="lp_header_text" parent="android:TextAppearance.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- photo sources -->
    <style name="lp_photo_source_title" parent="lp_normal_text">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- photo albums -->
    <style name="lp_photo_album_title" parent="lp_normal_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="lp_photo_count" parent="lp_normal_text">
        <item name="android:textColor">@color/lp_primary_tint_color</item>
    </style>

    <!-- full size preview -->
    <style name="lp_full_size_background">
        <item name="android:background">#000000</item>
    </style>

    <style name="lp_full_size_select_layout">
        <item name="android:background">#000000</item>
    </style>

    <style name="lp_full_size_select_button">
        <item name="android:textColor">@color/lp_primary_tint_color</item>
    </style>

    <style name="lp_contact_info_button">
        <item name="@android:background">@color/lp_primary_tint_color</item>
        <item name="@android:text">@string/lp_contact_information</item>
        <item name="@android:textSize">@dimen/lp_contact_info_btn_txt_size</item>
        <item name="@android:gravity">center_horizontal</item>
        <item name="@android:paddingTop">4dp</item>
        <item name="@android:paddingBottom">4dp</item>
        <item name="@android:textColor">@color/lp_white_color</item>
    </style>

    <!-- quantities -->
    <style name="lp_total_count" parent="lp_normal_text">
        <item name="android:textColor">@color/lp_primary_tint_color</item>
    </style>

    <!-- cart -->
    <style name="lp_cart_edit" parent="lp_normal_text">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/lp_primary_tint_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- change location -->
    <style name="lp_list_item_location" parent="lp_normal_text">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/lp_black_color</item>
    </style>

</resources>
