<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/lp_white_color">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lp_grey"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/lp_discount_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:text="Code"
        android:textColor="@color/lp_black_color"
        android:textSize="@dimen/lp_shipping_item_txt_size" />


    <TextView
        android:id="@+id/lp_discount_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="$0.00"
        android:textColor="@color/lp_secondary_tint_color"
        android:textSize="@dimen/lp_shipping_item_txt_size"
        android:textStyle="bold" />

</RelativeLayout>